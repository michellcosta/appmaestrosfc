{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" },
        { "key": "Content-Type", "value": "application/manifest+json" }
      ]
    }
  ],
  "routes": [
    { "src": "/manifest.json", "dest": "/public/manifest.json" },
    { "src": "/icons/(.*)", "dest": "/public/icons/$1" },
    { "src": "/sw\\.js", "dest": "/public/sw.js" },

    // Vite SPA fallback — mantém TUDO abaixo do bloco estático
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
