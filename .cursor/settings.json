{
    "cursor.ai.enabled": true,
    "cursor.ai.model": "gpt-4-turbo",
    "cursor.ai.maxTokens": 32000,
    "cursor.ai.temperature": 0.1,
    "cursor.ai.systemPrompt": "Você é um especialista sênior em React, TypeScript, Supabase e desenvolvimento full-stack. Sempre analise o contexto completo do projeto Maestros FC antes de fazer sugestões. Priorize soluções práticas, performáticas e escaláveis. Use as melhores práticas de desenvolvimento moderno.",
    "cursor.ai.includeFiles": [
        "src/**/*.{ts,tsx,js,jsx}",
        "supabase/**/*.sql",
        "*.json",
        "*.md"
    ],
    "cursor.ai.excludeFiles": [
        "node_modules/**",
        "dist/**",
        ".git/**",
        "*.log"
    ],
    "cursor.ai.contextWindow": 128000,
    "cursor.ai.enableCodeAnalysis": true,
    "cursor.ai.enableAutoComplete": true,
    "cursor.ai.enableChat": true,
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
    },
    "emmet.includeLanguages": {
        "typescript": "html",
        "typescriptreact": "html"
    },
    "files.associations": {
        "*.sql": "sql"
    }
}
